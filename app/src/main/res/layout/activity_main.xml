<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/to_toast_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_toast"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/to_calculator_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_calculator"
        app:layout_constraintTop_toBottomOf="@id/to_toast_activity_button"/>
    <Button
        android:id="@+id/send_mail_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_mail"
        app:layout_constraintTop_toBottomOf="@id/to_calculator_activity_button"/>
    <Button
        android:id="@+id/to_image_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_image"
        app:layout_constraintTop_toBottomOf="@id/send_mail_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>